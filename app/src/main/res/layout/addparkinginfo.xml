<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="top"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.fyp.MainActivity"
    android:id="@+id/addParkingDetailsForm">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:id="@+id/toptitle">

      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:errorEnabled="true"
          app:counterEnabled="true"
          app:counterMaxLength="25"
          android:id="@+id/Title">

         <android.support.design.widget.TextInputEditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Title"
             android:textColor="#000"/>

      </android.support.design.widget.TextInputLayout>

   </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/bottomdescription"
    android:layout_below="@+id/toptitle">

   <android.support.design.widget.TextInputLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:errorEnabled="true"
       android:id="@+id/Description">

      <android.support.design.widget.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Description"
          android:gravity="bottom"/>

   </android.support.design.widget.TextInputLayout>

</RelativeLayout>


   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:layout_below="@+id/bottomdescription"
       android:layout_marginTop="5dp">


      <Button
          android:layout_width="180dp"
          android:layout_height="wrap_content"
          android:text="Add"
          android:id="@+id/button_confirmAddParkingLot"/>

      <Button
          android:layout_width="180dp"
          android:layout_height="wrap_content"
          android:text="Cancel"
          android:id="@+id/button_cancelAddParkingLot"
          android:layout_toRightOf="@+id/button_confirmAddParkingLot"
          android:layout_marginLeft="25dp"/>

   </RelativeLayout>
    </RelativeLayout>

</FrameLayout>

